{
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "title": "Petro request",
    "description": "Data poziadavky petrol transakcie",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "uuid":  {"$ref": "https://raw.githubusercontent.com/AXASOFT-POS/nucleus/main/jsonSchema/baseSchema.json#/$defs/uuidv7"},
        "track2": {
            "type": "string",
            "pattern": "^;[0-9]{1,19}=[0-9]{4}[0-9]{3}[0-9]*\\?$",
            "$comment": "Cele cislo karty"
        },
        "pin": {
            "type": "string",
            "$comment": "PIN karty"
        },
        "posEntryMode": {
            "type": "string",
            "$comment": "POS Entry Mode - sposob vykonania trx",
            "maxLength": 3,
            "minLength": 3
        },
        "currencyCode": {
            "type": "string",
            "$comment": "Kod meny v ktorej bola transakcia realizovana",
            "const": "978"
        },
          "respCode": {
          "type": "string",
          "$comment": "Navratovy kod transakcie",
          "maxLength": 3,
          "minLength": 3
        },

        "termBaseReqData": {"$ref": "https://raw.githubusercontent.com/AXASOFT-POS/nucleus/main/jsonSchema/baseSchema.json#/$defs/TerminalBaseReqData"},
        "purchaseInfo": {"$ref": "#/$defs/purchaseInfo"},
        "purchaseItems": {"$ref": "#/$defs/purchaseItems"},
        "EMVData": {"$ref": "#/$defs/EMVData"}
    },
    "$defs": {
        "purchaseInfo": {
            "type": "object",
      "additionalProperties": false,
      "properties": {
                "DriverCode": {"type": "string"},
                "VehicleCode": {"type": "string"},
                "Odometer": {"type": "string"},
                "AdditionalInfo": {"type": "string"}
            }
        },
        "purchaseItems": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "Code": {
                        "type": "integer",
                        "$comment": "kod tovaru podla POS"
                    },
                    "Amount": {
                        "type": "integer",
                        "minimum": 1,
                        "$comment": "Jednotkova cena tovaru v stotinach meny"
                    },
                    "volume": {
                        "type": "integer",
                        "minimum": 0,
                        "$comment": "Mnozstvo tovaru v stotinach"
                    }
                },
                "required": [
                    "Code",
                    "Amount",
                    "volume"
                ]
            }
        },
        "EMVData": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "FieldO": {"type": "string"},
                "FieldP": {"type": "string"},
                "FieldQ": {"type": "string"}
            }
        }
    },
    "required": [
        "uuid",
        "track2",
        "respCode",
        "posEntryMode",
        "termBaseReqData",
        "purchaseItems"
    ]
}
