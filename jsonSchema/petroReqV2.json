{
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "title": "Petro request",
    "description": "Data poziadavky petrol transakcie",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "uuid": {"$ref": "https://raw.githubusercontent.com/AXASOFT-POS/nucleus/main/jsonSchema/baseSchema.json#/$defs/uuidv7"},
        "track2": {
            "type": "string",
            "pattern": "^;[0-9]{1,19}=[0-9]{4}[0-9]{3}[0-9]*\\?$",
            "$comment": "Cele cislo karty"
        },
        "pin": {
            "type": "string",
            "$comment": "PIN karty"
        },
        "posEntryMode": {
            "type": "string",
            "$comment": "POS Entry Mode - sposob vykonania trx",
            "maxLength": 3,
            "minLength": 3
        },
        "currencyCode": {
            "type": "string",
            "$comment": "Kod meny v ktorej bola transakcia realizovana",
            "const": "978"
        },
        "purchaseData": {
        "type": "string",
        "description": "Hexadecimálna reprezentácia reťazeca obsahujúci dáta nákupu oddelené GS (ASCII 0x1D)",
        "pattern": "^[A-Fa-f0-9]*$"        
        },
        "termBaseReqData": {"$ref": "https://raw.githubusercontent.com/AXASOFT-POS/nucleus/main/jsonSchema/baseSchema.json#/$defs/TerminalBaseReqData"},
        "EMVData": {"$ref": "#/$defs/EMVData"}
     },
    "$defs": {
          "EMVData": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "FieldP": {"type": "string"},
                "FieldQ": {"type": "string"}
            }
        }
    },
    "required": [
        "uuid",
        "purchaseData",
        "track2",
        "posEntryMode",
        "termBaseReqData"
    ]
}