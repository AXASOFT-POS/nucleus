{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Topup request",
    "description": "Data poziadavky Topup transakcie",
    "type": "object",
     "additionalProperties": false,
     "properties": {
        "uuid": {"$ref": "https://raw.githubusercontent.com/AXASOFT-POS/nucleus/main/jsonSchema/baseSchema.json#/$defs/uuidv7"},
        "termBaseReqData": {"$ref": "https://raw.githubusercontent.com/AXASOFT-POS/nucleus/main/jsonSchema/baseSchema.json#/$defs/TerminalBaseReqData"},
        "topupReqData": {"$ref": "#/$defs/topupReqData"}
    },
    "$defs": {
        "topupReqData": {
            "type": "object",
            "additionalProperties": false,
           "properties": {
                "product": {
                    "type": "string",
                    "$comment": "Identifikator Topup produktu z POS"
                },
                "data1": {
                    "type": "string",
                    "$comment": "Zaklane data produktu"
                },
                "data2": {
                    "type": "string",
                    "$comment": "Doplnujuce data produktu"
                },
                "ean": {
                    "type": "string",
                    "$comment": "EAN kod produktu",
                    "pattern": "^[0-9]{13}$"
                }
            },
            "required": [
                "product",
                "data1",
                "ean"
            ]
        }
    },
    "required": [
        "uuid",
        "termBaseReqData",
        "topupData"
    ]
}
