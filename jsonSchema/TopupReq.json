{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Topup request",
    "description": "Data poziadavky Topup transakcie",
    "type": "object",
     "additionalProperties": false,
     "properties": {
        "uuid": {"$ref": "https://raw.githubusercontent.com/AXASOFT-POS/nucleus/main/jsonSchema/baseSchema.json#/$defs/uuidv7"},
        "termBaseReqData": {"$ref": "https://raw.githubusercontent.com/AXASOFT-POS/nucleus/main/jsonSchema/baseSchema.json#/$defs/TerminalBaseReqData"},
                "product": {
                    "type": "string",
                    "$comment": "Identifikator Topup produktu z POS (operator)"
                },
                "mobNumber": {
                    "type": "string",
                    "$comment": "Dobijane telefonne cislo"
                },
                "notifyNumber": {
                    "type": "string",
                    "$comment": "Telefonne cislo pre notifikaciu"
                },
                "ean": {
                    "type": "string",
                    "$comment": "EAN kod produktu",
                    "pattern": "^[0-9]{13}$"
                }
            },
    "required": [
        "uuid",
        "termBaseReqData",
        "product",
        "mobNumber",
        "ean"
    ]
}
